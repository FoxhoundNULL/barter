    <div class="userInfo">
      <div class="top">
        <span class="username"><%= user.get('username') %></span>
        <span class="memberSince">joined <span class="date"><%= user.getJoinDateFormatted() %></span></span>
      </div>
      <div class="bottom">
        <span class="repContainer"><label>rep:</label> <span class="rep"><%= user.get('rep') %></span></span>
        <span class="balanceContainer"><label>balance:</label> <span class="balance"><%= user.get('points') %>Ä™</span></span>
      </div>
    </div>
  </div>

  <h4><a href="/app/settings">Settings</a></h4>
</div>
