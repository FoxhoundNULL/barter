<%
var moment = require('moment');
var user = request.get('User');
%>
<div class="requestListItem">
  <div class="col-sm-9">
    <h4 class="title"><a href="/app/requests/show/<%= request.id %>"><%= request.get('title') %></a></h4>
    <div class="requestMeta">
      Requested by <a href="/users/<%= user.get('id') %>"><%= user.get('username') %></a> <%= moment(request.get('createdAt')).fromNow() %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="sidePanel offerPanel">
      offer
    </div>
    <div class="sidePanel proposalsPanel">
      proposal
    </div>
  </div>
  <div class="clearfix"></div>
</div>
