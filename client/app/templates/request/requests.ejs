<div class="requestsView paginatedView">
  <h1 class="viewTitle"><%= mine ? 'My ' : 'Browse ' %>Requests</h1>
  <div class="controls top">
    <%= require('../components/limitSelect.ejs')({ limit: limit }) %>
    <div class="pull-right">
      <%= require('../components/sortSelect.ejs')({
        sorts: sorts,
        sort: sort
      }) %>
    </div>
    <div class="clearfix"></div>
    <%= require('../components/collapsibleContainer.ejs')({
      classes: 'advancedSearchContainer noSideBorder alignRight animated',
      text: { show: 'Advanced Search', hide: 'Hide Advanced Search' },
      html: require('../components/advancedSearch.ejs')(),
      collapsed: true,
    }) %>
  </div>
  <div class="requestList">
    <% requests.each(function (request) { %>
      <%= require('./requestListItem.ejs')({
        request: request,
        user: request.get('User'),
        proposals: request.get('Proposals')
      }) %>
    <% }); %>
  </div>
  <div class="controls bottom">
    <%= require('../components/pagination.ejs')({
      page: page,
      pages: pages
    }) %>
  </div>
</div>
