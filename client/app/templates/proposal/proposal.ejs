<div id="proposal-<%= proposal.get('id') %>" class="proposal" data-id="<%= proposal.get('id') %>">

  <div class="row head">
    <div class="col-sm-4 headLeft">
      <div class="profileContainer">
        <%= require('../profile/profile.ejs')({
          user: proposal.get('User')
        }) %>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-2 headRight">
      <span class="offerContainer">
        Requesting <span class="offer"><%= proposal.get('offer') %></span> Ä™
      </span>
      <% if (proposal.is('pending')) { %>
        <span class="actionContainer">
          <a href="#accepted" data-action="accepted">Accept</a>|<a href="#rejected" data-action="rejected">Reject</a>
        </span>
      <% } %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-body">
      <%= proposal.getBodyFormatted() %>
    </div>
  </div>

</div>
